# Import necessary libraries
import random
from termcolor import colored

# Function to display colorful messages
def display_message(message, color):
    print(colored(message, color))

# Generate a random number between 1 and 100
secret_number = random.randint(1, 100)
attempts = 0

display_message("Welcome to the Guess the Number Game!", "blue")
display_message("I'm thinking of a number between 1 and 100.", "green")
display_message("Can you guess what it is?", "yellow")

# Loop until the user guesses the correct number
while True:
    try:
        guess = int(input(colored("Enter your guess: ", "magenta")))
        attempts += 1

        if guess < secret_number:
            display_message("Too low! Try again.", "red")
        elif guess > secret_number:
            display_message("Too high! Try again.", "red")
        else:
            display_message(f"Congratulations! You've guessed the number in {attempts} attempts.", "green")
            break
    except ValueError:
        display_message("Please enter a valid number.", "red")

display_message("Thanks for playing!", "blue")